<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ejerciciolistviewsrepaso_09_02.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/celticscabecera"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenjug"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentebasket"
                android:text="NOMBRE: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dorsal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentebasket"
                android:text="DORSAL: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temporadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentebasket"
                android:text="TEMPORADAS: "
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HistÃ³ricos de Boston Celtics"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/colortextotitulo"
        android:background="@drawable/estilotitulo"
        android:shadowColor="@color/colorsombra"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvceltics"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
